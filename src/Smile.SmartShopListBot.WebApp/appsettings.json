{
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5299",
        "Protocols": "Http1"
      }
    }
  },
  "ModelParams": {
    "Path": "path/to/your_model.gguf",
    "ContextSize": 1024,
    "GpuLayerCount": 16,
    "InferenceParams": {
      "MaxTokens": 256,
      "AntiPrompts": [ "]" ],
      "RepeatPenalty": 1.0,
      "FrequencyPenalty": 0.0,
      "PresencePenalty": 0.0,
      "PenaltyCount": 64,
      "PenalizeNewline": false,
      "PreventEos": false,
      "Temperature": 0.0,
      "TopK": 1,
      "TypicalP": 1.0,
      "TopP": 1.0,
      "MinP": 0.0,
      "MinKeep": 1
    }
  },
  "TelegramBotClient": {
    "Token": "replace_with_your_bot_token"
  },
  "Localizer": {
    "DefaultLanguage": "en",
    "Languages": {
      "en": {
        "NoItemsInListText": "Your shopping list is empty.",
        "StartCommandResponseText": "Welcome to the Smart Shoplist Bot!",
        "ShopListHeaderText": "Click to toggle.",
        "UnknownCommandResponseText": "Unknown command. Please try again."
      },
      "ru": {
        "NoItemsInListText": "Ваш список покупок пуст.",
        "StartCommandResponseText": "Добро пожаловать в Smart Shoplist Bot!",
        "ShopListHeaderText": "Нажмите, чтобы переключить.",
        "UnknownCommandResponseText": "Неизвестная команда. Пожалуйста, попробуйте еще раз."
      }
    }
  },
  "Logger": {
    "Variables": {
      "LogDirectory": "${basedir}/logs",
      "LogPrefix": "smart-shoplist-bot"
    },
    "AutoReload": true,
    "Extensions": [
      { "Assembly": "NLog.Web.AspNetCore" }
    ],
    "Targets": {
      "GeneralFile": {
        "Type": "File",
        "FileName": "${var:logDirectory}/${var:logPrefix}.log",
        "Header": "Application version: ${gdc:item=appVersion}",
        "Layout": "${longdate}\t${uppercase:${level}}\t${logger}\t${message}\t${exception:format=tostring}",
        "ArchiveFileName": "${var:logDirectory}/${var:logPrefix}.log.{#}.zip",
        "ArchiveEvery": "Day",
        "ArchiveNumbering": "Date",
        "ArchiveDateFormat": "ddMMyyyy",
        "MaxArchiveFiles": 7,
        "EnableArchiveFileCompression": true,
        "KeepFileOpen": false
      },
      "LifetimeConsole": {
        "Type": "Console",
        "Layout": "${level:truncate=4:tolower=true}: ${logger}[0]${newline}      ${message}${exception:format=tostring}"
      }
    },
    "Rules": [
      {
        "Logger": "*",
        "MinLevel": "Info",
        "WriteTo": "GeneralFile"
      },
      {
        "Logger": "Microsoft.Hosting.Lifetime",
        "MaxLevel": "Info",
        "WriteTo": "lifetimeConsole",
        "Final": true
      },
      {
        "Logger": "Microsoft.*",
        "MaxLevel": "Info",
        "Final": true
      },
      {
        "Logger": "System.Net.Http.*",
        "MaxLevel": "Info",
        "Final": true
      }
    ]
  }
}
